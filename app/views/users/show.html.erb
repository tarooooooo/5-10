<h2>User info</h2>
  <div class="profile-container">

      <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>
  </div>

  <div class="row">

  <%= link_to edit_user_path(@user.id) do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  </div>
  <h2>New book</h2>
  <%= form_with model:@book,local:true do |f| %>
    <div class="form-group">
      <label for="book-title">Title</label>
      <%= f.text_field :title%>
    </div>
    <div class="form-group">
      <label for="book-opinion">Opinion</label>
      <%= f.text_area :opinion%>
    </div>
    <div class="form-group">
      <%= f.submit'Create Book'%>
    </div>
  <% end %>
  <div>
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan=3></th>
        </tr>
      </thead>
  <% @user_book.each do|book| %>
      <tbody>
        <tr>
         <td>
           <%=link_to user_path(book.user.id) do %>
           <%= attachment_image_tag book.user, :image, format: 'jpeg', fallback: "no_image.jpg" ,size: "40x40"%>
           <% end %>
         </td>
         <td>
           <%=link_to book_path(book.id) do %>
           <%=book.title %>
           <% end %>
         </td>
         <td><%= book.opinion %></td>
         </tr>
      </tbody>
  <% end %>
    </table>
  </div>