<%= render 'list',user:@user,book:@book %>
  <div>
    <h2>Books</h2>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan=3></th>
        </tr>
      </thead>
  <% @user_book.each do|book| %>
      <tbody>
        <tr>
         <td>
           <%=link_to user_path(book.user.id) do %>
           <%= attachment_image_tag book.user, :image, format: 'jpeg', fallback: "no_image.jpg" ,size: "40x40"%>
           <% end %>
         </td>
         <td>
           <%=link_to book_path(book.id) do %>
           <%=book.title %>
           <% end %>
         </td>
         <td><%= book.opinion %></td>
         </tr>
      </tbody>
  <% end %>
    </table>
  </div>