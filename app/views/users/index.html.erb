<h2>Users</h2>
<table>
  <theaad>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan =3></th>
    </tr>
  </theaad>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td> <%= attachment_image_tag user, :image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %> </td>
      <td> <%= user.name %> </td>
      <td>
        <%=link_to user_path(user.id) do %>
        show
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>