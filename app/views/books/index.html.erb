 <h2>Books</h2>
 <table class="table">

 <therd>
   <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan=3></th>
   </tr>
 </therd>

 <% @books.each do |book| %>
 <tbody>
  <tr>
   <th>
   <%= link_to user_path(book.user.id) do %>
   <%= attachment_image_tag book.user, :image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg"%>
   <% end %>
   </th>
   <th>
    <%= link_to book_path(book.id) do %>
    <%= book.title %>
    <% end %>
    </th>
   <th><%= book.opinion %></th>
  </tr>
 </tbody>
 <% end %>
 </table>