<h2>Book detail</h2>
<div class="table">
  <tbody>
  <tr>
    <td>
      <%=link_to user_path(@user.id) do %>
      <%= attachment_image_tag @user, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %> 
      <%=@user.name %>
      <% end %>
    </td>
    <td>
      <%=link_to book_path(@book.id) do%>
      <%=@book.title %>
      <% end %>
    </td>
    <td>
      <%= @book.opinion %>
    </td>
  </tr>
  </tbody>
</div>