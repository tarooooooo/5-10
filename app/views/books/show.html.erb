<%= render 'users/list',user:@user,book:@book%>
<h2>Book detail</h2>
<div class="table">
  <tbody>
  <tr>
    <td>
      <%=link_to user_path(@user.id) do %>
      <%= attachment_image_tag @user, :image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %> 
      <%=@user.name %>
      <% end %>
    </td>
    <td>
      <%=link_to book_path(@user_book.id) do%>
      <%=@user_book.title %>
      <% end %>
    </td>
    <td>
      <%= @user_book.opinion %>
    </td>
      <% if @user_book.user == current_user %>
    <td>
      <%=link_to edit_book_path(@user_book.id) do%>
      Edit
      <% end %>
    </td>
    <td>
      <%=link_to book_path(@user_book.id), method: :delete do%>
      Destroy
      <% end %>
      <% end %>
    </td>
  </tr>
  </tbody>
</div>